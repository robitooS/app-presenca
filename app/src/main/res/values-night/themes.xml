<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base da sua aplicação -->
    <style name="Base.Theme.PresenteApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.PresenteApp" parent="Base.Theme.PresenteApp" />

    <!-- ESTILOS PARA OS BOTÕES COM CORES SUAVES E BORDAS ARREDONDADAS -->

    <!-- Estilo base para os botões -->
    <style name="RoundedButtonBase" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@null</item>
    </style>

    <!-- Estilo para o botão verde claro -->
    <style name="LightGreenButton" parent="RoundedButtonBase">
        <item name="android:background">@drawable/button_rounded_green</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Estilo para o botão amarelo claro -->
    <style name="LightYellowButton" parent="RoundedButtonBase">
        <item name="android:background">@drawable/button_rounded_yellow</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Estilo para o botão azul claro -->
    <style name="LightBlueButton" parent="RoundedButtonBase">
        <item name="android:background">@drawable/button_rounded_blue</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>